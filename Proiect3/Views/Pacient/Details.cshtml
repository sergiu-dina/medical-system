@model Proiect3.ViewModel.PacientMedicMedicineViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details for @Html.DisplayFor(model => model.Pacient.NumePacient) @Html.DisplayFor(model => model.Pacient.PrenumePacient)</h2>

<div class="card">
    <div class="card-header">
        <h4>Pacient</h4>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>
                Pacient Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Pacient.NumePacient) @Html.DisplayFor(model => model.Pacient.PrenumePacient)
            </dd>

            <dt>
                CNP
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Pacient.CNP)
            </dd>

            <dt>
                Adress
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Pacient.Adresa)
            </dd>

            <dt>
                Insurance
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Pacient.Asigurare)
            </dd>
        </dl>

        @if (Model.Consultatii.Count > 0)
        {
            <h5>Consultations</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Medicine Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Diagnostic</th>
                        <th scope="col">Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Consultatii)
                    {
                        <tr>
                            <td>@item.NumeMedicament</td>
                            <td>@item.DozaMedicament</td>
                            <td>@item.Diagnostic</td>
                            <td>@item.Data</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        @if (Model.Medici.Count > 0)
        {
            <h5>Medics</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Last Name</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Specialization</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Medici)
                    {
                        <tr>
                            <td>@item.NumeMedic</td>
                            <td>@item.PrenumeMedic</td>
                            <td>@item.Specializare</td>
                            <td>
                                @Html.ActionLink("Details", "Details", "Medic", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
    <div class="card-footer">
        <p>
            <a class="btn btn-primary"
               asp-action="Edit" asp-controller="Pacient" asp-route-id="@Model.Pacient.Id">
                Edit
            </a>
            <a class="btn btn-primary"
               asp-action="Index" asp-controller="Pacient">
                Back to List
            </a>
        </p>
    </div>
</div>